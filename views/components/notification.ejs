<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">

  <% if (success && success.length) { %>
    <div class="ui success message">
      <p><%= success %></p>
    </div>
  <% } %>

  <% if (errors && errors.length) { %>
    <div class="ui error message">
      <p><%= errors %></p>
    </div>
  <% } %>

  </div>
</div>
